<% include ./partials/header %> 
<link rel="stylesheet" href="../stylesheets/register.css" type="text/css">
		

<form action="/register" method="post">
					
						
			   <div style="width: 30%; margin: 25px auto">
            
                <div class="form-group">
                    <input class="form-control" type="file" name="profile_image"  accept="image/*" capture >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="First Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="last_name" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="phone" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <div class="form-group" style="text-align: center">
                	<h6>Already have an account???</h6>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" href="/login">Login</button>
                </div>
                    	
</form>
<% include ./partials/footer %> 





